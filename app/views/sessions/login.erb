<div class="container">

  <h1>Welcome to JokeShit</h1>
  <h3>Your local messenger for random jokes</h3>

  <h2><%= flash[:error] %></h2>

<% if !current_user %>
  <div id="login_box">
    <h1>Log In</h1>
    <form class="login" action='/sessions/new' method='get'>
      <input type="button" value="Login with Google">
    </form>

    <form class="signup" action='/users/new' method='get'>
      <input type="button" value="Sign Up with Google">
    </form>
  </div>
<% end %>

</div>
